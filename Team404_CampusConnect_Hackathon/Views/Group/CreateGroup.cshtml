@{
    ViewData["Title"] = "Create Group";
}

<h2>Create a New Group</h2>

@if (ViewBag.ErrorMsg != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMsg</div>
}
@if (ViewBag.SuccessMsg != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMsg</div>
}

<div class="container my-5">
    <div class="card shadow-sm rounded" style="background-color:#E9ECF5; border:none; padding:20px;">
        <div class="card-body">
            <h2 class="text-primary mb-4">Create a New Group</h2>

            <div class="col-md-6 mb-3">
                @if (ViewBag.ErrorMsg != null)
                {
                    <div class="alert" style="background-color:#FF6B6B; color:white; border-radius:0.5rem;">
                        @ViewBag.ErrorMsg
                    </div>
                }
                @if (ViewBag.SuccessMsg != null)
                {
                    <div class="alert" style="background-color:#2ECC71; color:white; border-radius:0.5rem;">
                        @ViewBag.SuccessMsg
                    </div>
                }
            </div>

            <form asp-action="CreateGroup" method="post">
                <div class="mb-3">
                    <label for="groupName" class="form-label">Group Name</label>
                    <input type="text" class="form-control" id="groupName" name="groupName" placeholder="Enter group name" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" placeholder="Enter group description"></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Create Group</button>
            </form>

            <div class="mt-3">
                <a asp-action="Index" asp-controller="Home" style="color:#4B6EF5; text-decoration:underline;">Back to Home</a>
            </div>
        </div>
    </div>
</div>