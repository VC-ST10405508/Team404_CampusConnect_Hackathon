@model IEnumerable<Team404_CampusConnect_Hackathon.Models.Group>

<h2>All Groups</h2>

@if (TempData["Error"] != null)
{
    <div class="alert-success">
        @TempData["PostSuccess"]
    </div>
}
<p>Want to Create your own group? Create a new one here:</p>
<a asp-controller="Group" asp-action="CreateGroup" class="btn btn-primary">Create New Group</a>
<br/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.GroupName</td>
                <td>@group.Description</td>
                <td>@group.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-controller="Group"
                       asp-action="SpecificGroup"
                       asp-route-id="@group.GroupID"
                       class="btn btn-primary">
                        View Group
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>