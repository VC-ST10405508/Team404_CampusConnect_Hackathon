@model IEnumerable<Team404_CampusConnect_Hackathon.Models.Post>

<h2 class="text-primary mb-3">All Posts</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["PostSuccess"]
    </div>
}

<p>Want to respond to someone or share a post? Create a new one here:</p>
<a asp-controller="Post" asp-action="NewPost" class="btn btn-primary mb-4">Create New Post</a>

<table class="table table-striped table-hover shadow-sm rounded">
    <thead class="table-dark">
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Category</th>
        <th>Date Created</th>
        <th>User</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Title</td>
            <td>@post.Content</td>
            <td>@post.Category</td>
            <td>@post.DateCreated.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@post.Username</td>
            <td>
                <a asp-action="Details" asp-route-id="@post.PostID" class="btn btn-sm text-white" style="background-color:#4B6EF5;">View</a>
                <a asp-action="Edit" asp-route-id="@post.PostID" class="btn btn-sm text-white" style="background-color:#2ECC71;">Edit</a>
                <a asp-action="Delete" asp-route-id="@post.PostID" class="btn btn-sm text-white" style="background-color:#FF6B6B;">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>