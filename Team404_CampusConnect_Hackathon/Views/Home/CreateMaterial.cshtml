@model Team404_CampusConnect_Hackathon.Models.StudyMaterial

@{
    ViewData["Title"] = "Create Study Material";
}

<h2>Create Study Material</h2>

<form asp-action="CreateMaterial" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken() <!-- THIS LINE IS REQUIRED -->

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Attach File (img, pdf, zip)</label>
        <input type="file" name="upload" class="form-control" accept=".jpg,.jpeg,.png,.gif,.pdf,.zip,.rar"/>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}